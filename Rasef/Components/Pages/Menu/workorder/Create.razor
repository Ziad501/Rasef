@page "/workorder/create"
@layout MainLayout
@using System.ComponentModel.DataAnnotations
@using Rasef.Resources.Localization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager Nav
@inject IStringLocalizer<Strings> L
@inject CultureService Culture
@implements IDisposable

@code {
    protected override void OnInitialized()
    {
        Culture.OnChange += HandleCultureChanged;
        base.OnInitialized();
    }

    private void HandleCultureChanged() => InvokeAsync(StateHasChanged);
    public void Dispose() => Culture.OnChange -= HandleCultureChanged;

    private string activeTab = "general";
    private WorkOrderForm model = new();

    // attachments (IBrowserFile references)
    private IBrowserFile? ProjectPlanFile;
    private IBrowserFile? ImageBeforeFile;
    private IBrowserFile? ImageAfterFile;
    private IBrowserFile? MapKeyFile;
    private IBrowserFile? OtherDocFile;

    // file handlers
    void OnProjectPlanSelected(InputFileChangeEventArgs e) => ProjectPlanFile = e.FileCount > 0 ? e.File : null;
    void OnImageBeforeSelected(InputFileChangeEventArgs e) => ImageBeforeFile = e.FileCount > 0 ? e.File : null;
    void OnImageAfterSelected(InputFileChangeEventArgs e) => ImageAfterFile = e.FileCount > 0 ? e.File : null;
    void OnMapKeySelected(InputFileChangeEventArgs e) => MapKeyFile = e.FileCount > 0 ? e.File : null;
    void OnOtherDocSelected(InputFileChangeEventArgs e) => OtherDocFile = e.FileCount > 0 ? e.File : null;

    static string HumanSize(long bytes)
    {
        decimal s = bytes;
        string[] u = { "B", "KB", "MB", "GB", "TB" };
        int i = 0;
        while (s >= 1024 && i < u.Length - 1) { s /= 1024; i++; }
        return $"{s:0.#} {u[i]}";
    }

    private void Submit() => Nav.NavigateTo("/workorder/workflow");

    // tab handlers (method groups -> no CS1662)
    void SetTabGeneral(MouseEventArgs _) => activeTab = "general";
    void SetTabAttachments(MouseEventArgs _) => activeTab = "attachments";
    void SetTabWorkflow(MouseEventArgs _) => activeTab = "workflow";

    private void AddLane() => model.Lanes.Add(new LaneForm { LaneNo = (model.Lanes.Count + 1).ToString(), Type = "Normal" });
    private void RemoveLane(LaneForm lane) => model.Lanes.Remove(lane);

    private void AddEquipment() => model.Equipment.Add(new EquipmentForm());
    private void RemoveEquipment(EquipmentForm eq) => model.Equipment.Remove(eq);

    private void AddFix() => model.Fixes.Add(new FixForm());
    private void RemoveFix(FixForm fix) => model.Fixes.Remove(fix);

    private void AddBoqItem() => model.BoqItems.Add(new BoqItemForm());
    private void RemoveBoqItem(BoqItemForm item) => model.BoqItems.Remove(item);

    public class WorkOrderForm
    {
        public string StreetCategory { get; set; } = "Sub";
        public string Municipality { get; set; } = "";
        public string MainDistrict { get; set; } = "";
        public string SubDistrict { get; set; } = "";
        public string SingleStreetNo { get; set; } = "";
        public string SelectedStreetNos { get; set; } = "";
        public string Sector { get; set; } = "";
        public string SectionNo { get; set; } = "";
        public List<LaneForm> Lanes { get; set; } = new();

        [Required(ErrorMessage = "Required")]
        public string Type { get; set; } = "";

        public DateTime? WorkOrderDate { get; set; }
        public DateTime? WorkOrderEndDate { get; set; }
        public DateTime? WorkOrderRenewDate { get; set; }
        public string AssignTo { get; set; } = "";
        public string ProjectRef { get; set; } = "";
        public string ContractNumber { get; set; } = "";
        public string SiteLocation { get; set; } = "";
        public int? WorkDuration { get; set; }
        public int? YearsOfLife { get; set; }
        public DateTime? WarrantyEndDate { get; set; }
        public DateTime? WarrantyStartDate { get; set; }

        public List<EquipmentForm> Equipment { get; set; } = new();
        public List<FixForm> Fixes { get; set; } = new();
        public List<BoqItemForm> BoqItems { get; set; } = new();
        public string WorkOrderNotes { get; set; } = "";
    }

    public class LaneForm { public string LaneNo { get; set; } = ""; public string Type { get; set; } = "Normal"; }
    public class EquipmentForm { public string Name { get; set; } = ""; public int Quantity { get; set; } = 1; }
    public class FixForm { public string Name { get; set; } = ""; public string Description { get; set; } = ""; }
    public class BoqItemForm { public string Desc { get; set; } = ""; public string Code { get; set; } = ""; public string Unit { get; set; } = ""; public decimal Qty { get; set; } public decimal PrevExec { get; set; } public decimal ExecQty { get; set; } }
}

<div dir="@(Culture.IsArabic ? "rtl" : "ltr")">

    <!-- Header -->
    <div class="mb-3">
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <a href="/workorder/workflow"
                   class="btn btn-light d-flex align-items-center justify-content-center header-back-btn"
                   style="width: 40px; height: 40px;">
                    <i class="bi bi-arrow-@(Culture.IsArabic ? "right" : "left")"></i>
                </a>
                <div>
                    <h5 class="m-0 fw-bold text-primary">@L["title_create"]</h5>
                    <p class="text-muted small mb-0">@L["subtitle_create"]</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="card mb-3 border-0 shadow-sm">
        <div class="card-header bg-body-secondary border-bottom">
            <ul class="nav nav-tabs card-header-tabs border-0">
                <li class="nav-item">
                    <button class="nav-link @(activeTab == "general" ? "active" : "") border-0 d-flex align-items-center gap-2"
                            @onclick="SetTabGeneral">
                        <i class="bi bi-info-circle"></i> @L["general"]
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link @(activeTab == "attachments" ? "active" : "") border-0 d-flex align-items-center gap-2"
                            @onclick="SetTabAttachments">
                        <i class="bi bi-paperclip"></i> @L["attachmentsTitle"]
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link @(activeTab == "workflow" ? "active" : "") border-0 d-flex align-items-center gap-2"
                            @onclick="SetTabWorkflow">
                        <i class="bi bi-clock-history"></i> @L["workflowHistoryTitle"]
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <!-- Form -->
    <EditForm Model="model" OnValidSubmit="Submit">
        <DataAnnotationsValidator />

        @if (activeTab == "general")
        {
            <div class="p-3">
                <!-- Street Information -->
                <div class="card mb-4 border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-signpost-2 fs-5"></i>
                        <span class="fw-bold">@L["streetInfo"]</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">

                            <div class="col-md-12">
                                <label class="form-label fw-semibold small text-uppercase d-block">@L["streetCategory"] *</label>
                                <InputRadioGroup @bind-Value="model.StreetCategory" TValue="string" class="d-flex gap-3">
                                    <div class="form-check form-check-inline">
                                        <InputRadio TValue="string" Value="@("Main")" class="form-check-input" id="catMain" />
                                        <label class="form-check-label" for="catMain">@L["mainStreet"]</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <InputRadio TValue="string" Value="@("Sub")" class="form-check-input" id="catSub" />
                                        <label class="form-check-label" for="catSub">@L["subStreet"]</label>
                                    </div>
                                </InputRadioGroup>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["municipality"] *</label>
                                <InputSelect class="form-select" @bind-Value="model.Municipality">
                                    <option value="">@L["selectMunicipality"]</option>
                                    <option value="jeddah">جدة / Jeddah</option>
                                    <option value="mecca">مكة / Mecca</option>
                                    <option value="riyadh">الرياض / Riyadh</option>
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["mainDistrict"] *</label>
                                <InputSelect class="form-select" @bind-Value="model.MainDistrict">
                                    <option value="">@L["selectDistrict"]</option>
                                    <option value="alsalamah">Al-Salamah</option>
                                    <option value="alrawdah">Al-Rawdah</option>
                                </InputSelect>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["subDistrict"]</label>
                                <InputText class="form-control" @bind-Value="model.SubDistrict" placeholder="Block A" />
                            </div>

                            @if (model.StreetCategory == "Sub")
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold small text-uppercase">@L["streetNos"]</label>
                                    <InputText class="form-control" @bind-Value="model.SelectedStreetNos" placeholder="101, 102, 103" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold small text-uppercase">@L["sectionNo"]</label>
                                    <InputText class="form-control" @bind-Value="model.SectionNo" />
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold small text-uppercase">@L["street"]</label>
                                    <InputText class="form-control" @bind-Value="model.SingleStreetNo" placeholder="1001" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold small text-uppercase">@L["sector"]</label>
                                    <InputText class="form-control" @bind-Value="model.Sector" placeholder="Sector-1" />
                                </div>

                                <div class="col-12">
                                    <div class="p-3 bg-body-secondary border rounded-3">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <label class="form-label fw-semibold mb-0">@L["laneType"]</label>
                                            <button type="button" class="btn btn-primary btn-sm" @onclick="AddLane">
                                                <i class="bi bi-plus-circle me-1"></i> @L["addLane"]
                                            </button>
                                        </div>

                                        @if (model.Lanes.Count == 0)
                                        {
                                            <div class="text-center text-muted py-5">
                                                <i class="bi bi-inbox display-1 opacity-25"></i>
                                                <p class="mt-2">@L["noItems"]</p>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="d-flex flex-column gap-2">
                                                @foreach (var lane in model.Lanes)
                                                {
                                                    <div class="d-flex gap-2 p-3 bg-body border rounded-2 align-items-end">
                                                        <div style="min-width: 120px;">
                                                            <label class="form-label small fw-semibold text-muted">@L["laneNo"]</label>
                                                            <InputText class="form-control form-control-sm" @bind-Value="lane.LaneNo" />
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <label class="form-label small fw-semibold text-muted">@L["laneType"]</label>
                                                            <InputSelect class="form-select form-select-sm" @bind-Value="lane.Type">
                                                                <option value="Normal">@L["Normal"]</option>
                                                                <option value="ExceptionPriority">@L["ExceptionPriority"]</option>
                                                                <option value="ExceptionEmergency">@L["ExceptionEmergency"]</option>
                                                            </InputSelect>
                                                        </div>
                                                        <button type="button" class="btn btn-danger btn-sm" @onclick="() => RemoveLane(lane)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Work Order Type -->
                <div class="card mb-4 border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-tag fs-5"></i>
                        <span class="fw-bold">@L["workOrderType"]</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["workOrderType"] *</label>
                                <InputSelect class="form-select" @bind-Value="model.Type">
                                    <option value="">@L["selectType"]</option>
                                    <option value="Normal">@L["Normal"]</option>
                                    <option value="ExceptionPriority">@L["ExceptionPriority"]</option>
                                    <option value="ExceptionEmergency">@L["ExceptionEmergency"]</option>
                                </InputSelect>
                                <ValidationMessage For="() => model.Type" class="text-danger small" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Dates -->
                <div class="card mb-4 border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-calendar3 fs-5"></i>
                        <span class="fw-bold">@L["orderDates"]</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-semibold small text-uppercase">@L["workOrderDate"] *</label>
                                <InputDate class="form-control" @bind-Value="model.WorkOrderDate" @bind-Value:format="yyyy-MM-dd" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold small text-uppercase">@L["workOrderEndDate"] *</label>
                                <InputDate class="form-control" @bind-Value="model.WorkOrderEndDate" @bind-Value:format="yyyy-MM-dd" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold small text-uppercase">@L["workOrderRenewDate"]</label>
                                <InputDate class="form-control" @bind-Value="model.WorkOrderRenewDate" @bind-Value:format="yyyy-MM-dd" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Project Information -->
                <div class="card mb-4 border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-folder2-open fs-5"></i>
                        <span class="fw-bold">@L["projectInfo"]</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["assignTo"] *</label>
                                <InputSelect class="form-select" @bind-Value="model.AssignTo">
                                    <option value="">@L["selectType"]</option>
                                    <option value="consultant-a">Consultant A</option>
                                    <option value="consultant-b">Consultant B</option>
                                    <option value="consultant-c">Consultant C</option>
                                </InputSelect>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["projectRef"] *</label>
                                <InputSelect class="form-select" @bind-Value="model.ProjectRef">
                                    <option value="">@L["selectType"]</option>
                                    <option value="road2025">Road Maintenance 2025</option>
                                    <option value="bridge2025">Bridge Repair 2025</option>
                                </InputSelect>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["contractNumber"]</label>
                                <InputText class="form-control" @bind-Value="model.ContractNumber" placeholder="CNT-2025-001" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold small text-uppercase">@L["siteLocation"] *</label>
                                <InputText class="form-control" @bind-Value="model.SiteLocation" placeholder="Prince Mohammed Bin Abdulaziz St." />
                            </div>
                            <div class="col-md-12">
                                <label class="form-label fw-semibold small text-uppercase">@L["workDuration"] *</label>
                                <InputNumber class="form-control" @bind-Value="model.WorkDuration" placeholder="45" />
                                <div class="form-text fst-italic">@L["durationHelp"]</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Warranty -->
                <div class="card mb-4 border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-shield-check fs-5"></i>
                        <span class="fw-bold">@L["warranty"]</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label fw-semibold small text-uppercase">@L["yearsOfLife"]</label>
                                <InputNumber class="form-control" @bind-Value="model.YearsOfLife" placeholder="2" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold small text-uppercase">@L["warrantyStartDate"]</label>
                                <InputDate class="form-control" @bind-Value="model.WarrantyStartDate" @bind-Value:format="yyyy-MM-dd" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold small text-uppercase">@L["warrantyEndDate"]</label>
                                <InputDate class="form-control" @bind-Value="model.WarrantyEndDate" @bind-Value:format="yyyy-MM-dd" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="card mb-4 border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-info-square fs-5"></i>
                        <span class="fw-bold">@L["additionalInfo"]</span>
                    </div>
                    <div class="card-body p-4">

                        <!-- Equipment -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <label class="form-label fw-semibold mb-0">@L["equipment"]</label>
                                <button type="button" class="btn btn-primary btn-sm" @onclick="AddEquipment">
                                    <i class="bi bi-plus-circle me-1"></i> @L["addEquipment"]
                                </button>
                            </div>

                            @if (model.Equipment.Count == 0)
                            {
                                <div class="text-center text-muted py-4 bg-body-secondary border rounded-2">
                                    <i class="bi bi-tools display-4 opacity-25"></i>
                                    <p class="mt-2 mb-0 small">@L["noItems"]</p>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex flex-column gap-2">
                                    @foreach (var eq in model.Equipment)
                                    {
                                        <div class="d-flex gap-2 p-3 bg-body-secondary border rounded-2 align-items-end">
                                            <div class="flex-grow-1">
                                                <label class="form-label small fw-semibold text-muted">@L["equipmentName"]</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="eq.Name" placeholder='@L["equipmentName"]' />
                                            </div>
                                            <div style="min-width: 120px;">
                                                <label class="form-label small fw-semibold text-muted">@L["quantity"]</label>
                                                <InputNumber class="form-control form-control-sm" @bind-Value="eq.Quantity" />
                                            </div>
                                            <button type="button" class="btn btn-danger btn-sm" @onclick="() => RemoveEquipment(eq)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Fixes -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <label class="form-label fw-semibold mb-0">@L["itemFix"]</label>
                                <button type="button" class="btn btn-primary btn-sm" @onclick="AddFix">
                                    <i class="bi bi-plus-circle me-1"></i> @L["addFix"]
                                </button>
                            </div>

                            @if (model.Fixes.Count == 0)
                            {
                                <div class="text-center text-muted py-4 bg-body-secondary border rounded-2">
                                    <i class="bi bi-gear display-4 opacity-25"></i>
                                    <p class="mt-2 mb-0 small">@L["noItems"]</p>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex flex-column gap-2">
                                    @foreach (var fix in model.Fixes)
                                    {
                                        <div class="d-flex gap-2 p-3 bg-body-secondary border rounded-2 align-items-end">
                                            <div style="min-width: 200px;">
                                                <label class="form-label small fw-semibold text-muted">@L["fixName"]</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="fix.Name" placeholder='@L["fixName"]' />
                                            </div>
                                            <div class="flex-grow-1">
                                                <label class="form-label small fw-semibold text-muted">@L["fixDescription"]</label>
                                                <InputText class="form-control form-control-sm" @bind-Value="fix.Description" placeholder='@L["fixDescription"]' />
                                            </div>
                                            <button type="button" class="btn btn-danger btn-sm" @onclick="() => RemoveFix(fix)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Work Order Notes -->
                        <div>
                            <label class="form-label fw-semibold small text-uppercase">@L["workOrderNotes"]</label>
                            <InputTextArea class="form-control" rows="4" @bind-Value="model.WorkOrderNotes" placeholder='@L["notesPlaceholder"]' />
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (activeTab == "attachments")
        {
            <div class="p-3">
                <div class="card border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-paperclip fs-5"></i>
                        <span class="fw-bold">@L["attachmentsTitle"]</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">

                            <!-- Project Plan -->
                            <div class="col-md-6">
                                <div class="text-center p-4 bg-body-secondary border border-2 border-dashed rounded-3">
                                    <div class="mb-3"><i class="bi bi-file-earmark-pdf text-primary display-6"></i></div>
                                    <label class="fw-semibold d-block mb-3">@L["projectPlan"]</label>

                                    <InputFile id="file-projectplan" OnChange="OnProjectPlanSelected" accept=".pdf,application/pdf" style="display:none" />
                                    @if (ProjectPlanFile is null)
                                    {
                                        <label class="btn btn-primary btn-sm w-100" for="file-projectplan">
                                            <i class="bi bi-upload me-1"></i> @L["selectFile"]
                                        </label>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-between align-items-center bg-body border rounded p-2">
                                            <div class="text-start">
                                                <div class="fw-semibold text-truncate" style="max-width: 240px;">@ProjectPlanFile.Name</div>
                                                <div class="small text-muted">@HumanSize(ProjectPlanFile.Size)</div>
                                            </div>
                                            <button type="button" class="btn btn-outline-danger btn-sm" @onclick="() => ProjectPlanFile = null">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Image Before -->
                            <div class="col-md-6">
                                <div class="text-center p-4 bg-body-secondary border border-2 border-dashed rounded-3">
                                    <div class="mb-3"><i class="bi bi-file-earmark-image text-primary display-6"></i></div>
                                    <label class="fw-semibold d-block mb-3">@L["imageBefore"]</label>

                                    <InputFile id="file-imgbefore" OnChange="OnImageBeforeSelected" accept="image/*" style="display:none" />
                                    @if (ImageBeforeFile is null)
                                    {
                                        <label class="btn btn-primary btn-sm w-100" for="file-imgbefore">
                                            <i class="bi bi-upload me-1"></i> @L["selectFile"]
                                        </label>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-between align-items-center bg-body border rounded p-2">
                                            <div class="text-start">
                                                <div class="fw-semibold text-truncate" style="max-width: 240px;">@ImageBeforeFile.Name</div>
                                                <div class="small text-muted">@HumanSize(ImageBeforeFile.Size)</div>
                                            </div>
                                            <button type="button" class="btn btn-outline-danger btn-sm" @onclick="() => ImageBeforeFile = null">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Image After -->
                            <div class="col-md-6">
                                <div class="text-center p-4 bg-body-secondary border border-2 border-dashed rounded-3">
                                    <div class="mb-3"><i class="bi bi-file-earmark-image text-primary display-6"></i></div>
                                    <label class="fw-semibold d-block mb-3">@L["imageAfter"]</label>

                                    <InputFile id="file-imgafter" OnChange="OnImageAfterSelected" accept="image/*" style="display:none" />
                                    @if (ImageAfterFile is null)
                                    {
                                        <label class="btn btn-primary btn-sm w-100" for="file-imgafter">
                                            <i class="bi bi-upload me-1"></i> @L["selectFile"]
                                        </label>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-between align-items-center bg-body border rounded p-2">
                                            <div class="text-start">
                                                <div class="fw-semibold text-truncate" style="max-width: 240px;">@ImageAfterFile.Name</div>
                                                <div class="small text-muted">@HumanSize(ImageAfterFile.Size)</div>
                                            </div>
                                            <button type="button" class="btn btn-outline-danger btn-sm" @onclick="() => ImageAfterFile = null">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Map Key -->
                            <div class="col-md-6">
                                <div class="text-center p-4 bg-body-secondary border border-2 border-dashed rounded-3">
                                    <div class="mb-3"><i class="bi bi-map text-primary display-6"></i></div>
                                    <label class="fw-semibold d-block mb-3">@L["mapKey"]</label>

                                    <InputFile id="file-mapkey" OnChange="OnMapKeySelected" accept=".png,.jpg,.jpeg,.pdf,image/*,application/pdf" style="display:none" />
                                    @if (MapKeyFile is null)
                                    {
                                        <label class="btn btn-primary btn-sm w-100" for="file-mapkey">
                                            <i class="bi bi-upload me-1"></i> @L["selectFile"]
                                        </label>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-between align-items-center bg-body border rounded p-2">
                                            <div class="text-start">
                                                <div class="fw-semibold text-truncate" style="max-width: 240px;">@MapKeyFile.Name</div>
                                                <div class="small text-muted">@HumanSize(MapKeyFile.Size)</div>
                                            </div>
                                            <button type="button" class="btn btn-outline-danger btn-sm" @onclick="() => MapKeyFile = null">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Other Document -->
                            <div class="col-12">
                                <div class="text-center p-4 bg-body-secondary border border-2 border-dashed rounded-3">
                                    <div class="mb-3"><i class="bi bi-file-earmark text-primary display-6"></i></div>
                                    <label class="fw-semibold d-block mb-3">@L["otherDoc"]</label>

                                    <InputFile id="file-otherdoc" OnChange="OnOtherDocSelected" accept="*/*" style="display:none" />
                                    @if (OtherDocFile is null)
                                    {
                                        <label class="btn btn-primary btn-sm" for="file-otherdoc">
                                            <i class="bi bi-upload me-1"></i> @L["selectFile"]
                                        </label>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center">
                                            <div class="d-flex justify-content-between align-items-center bg-body border rounded p-2" style="max-width: 480px; width:100%;">
                                                <div class="text-start">
                                                    <div class="fw-semibold text-truncate" style="max-width: 340px;">@OtherDocFile.Name</div>
                                                    <div class="small text-muted">@HumanSize(OtherDocFile.Size)</div>
                                                </div>
                                                <button type="button" class="btn btn-outline-danger btn-sm" @onclick="() => OtherDocFile = null">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
        else if (activeTab == "workflow")
        {
            <div class="p-3">
                <div class="card border shadow-sm">
                    <div class="card-header bg-primary-subtle d-flex align-items-center gap-2">
                        <i class="bi bi-clock-history fs-5"></i>
                        <span class="fw-bold">@L["workflowHistoryTitle"]</span>
                    </div>
                    <div class="card-body p-4">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-inbox display-1 opacity-25"></i>
                            <p class="mt-2">@L["noHistory"]</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Bottom actions -->
        <div class="mt-4 d-flex justify-content-end gap-2 flex-wrap">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy me-1"></i> @L["saveClose"]
            </button>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle me-1"></i> @L["saveKeep"]
            </button>
            <button type="button" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i> @L["delete"]
            </button>
        </div>
    </EditForm>
</div>
