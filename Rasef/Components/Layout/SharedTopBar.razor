@* Components/Shared/SharedTopBar.razor *@
@using Rasef.Resources.Localization
@inject IStringLocalizer<Strings> L
@inject CultureService Culture
@implements IDisposable

<nav class="navbar navbar-expand-lg topbar shadow-sm">
    <div class="container-fluid px-3">
        <a class="navbar-brand d-flex align-items-center" href="/home">
            <div class="logo-container rounded-circle p-2 bg-white">
                <img src="/css/img/logo.png" alt="راصف" height="32" />
            </div>
        </a>

        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse" data-bs-target="#topNav"
                aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="topNav">
            <div class="d-flex flex-wrap gap-2 me-auto ms-lg-3 mt-2 mt-lg-0">
                <a href="/home" class="btn btn-sm px-3 nav-btn">
                    <i class="bi bi-house-door me-1"></i> @L["home"]
                </a>

                <div class="btn-group">
                    <button type="button" class="btn btn-sm px-3 dropdown-toggle nav-btn" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-grid-3x3-gap me-1"></i> @L["menu"]
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item" href="/pavement">
                                @L["pavement"] <i class="bi bi-bricks me-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/workorder/workflow">
                                @L["workOrder"] <i class="bi bi-clipboard-check me-2"></i>
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item" href="/EAM">
                                @L["EAM"] <i class="bi bi-gear-wide-connected me-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/distortion">
                                @L["distortion"] <i class="bi bi-activity me-2"></i>
                            </a>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <a class="dropdown-item" href="/businessIntelligence">
                                @L["businessIntelligence"] <i class="bi bi-lightbulb me-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/dashboards">
                                @L["dashboards"] <i class="bi bi-bar-chart me-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/gis">
                                @L["gis"] <i class="bi bi-map me-2"></i>
                            </a>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <a class="dropdown-item" href="/parameters">
                                @L["parameters"] <i class="bi bi-sliders me-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/configuration">
                                @L["configuration"] <i class="bi bi-tools me-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/geoProvider">
                                @L["geoProvider"] <i class="bi bi-geo-alt me-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/systemSettings">
                                @L["systemSettings"] <i class="bi bi-gear me-2"></i>
                            </a>
                        </li>
                    </ul>
                </div>

                <a href="/profile" class="btn btn-sm px-3 nav-btn">
                    <i class="bi bi-person-circle me-1"></i> @L["profile"]
                </a>
                <a href="/about" class="btn btn-sm px-3 nav-btn">
                    <i class="bi bi-info-circle me-1"></i> @L["about"]
                </a>
                <a href="/settings" class="btn btn-sm px-3 nav-btn">
                    <i class="bi bi-gear-fill me-1"></i> @L["settings"]
                </a>
            </div>

            <div class="d-flex gap-2 mt-2 mt-lg-0">
                <button type="button" class="btn btn-sm px-3 theme-toggle" @onclick="ToggleTheme"
                        title="@(IsDarkMode ? "Light Mode" : "Dark Mode")">
                    <i class="bi @(IsDarkMode ? "bi-sun-fill" : "bi-moon-fill") me-1"></i>
                </button>

                <button type="button" class="btn btn-sm px-3 language-toggle" @onclick="ToggleLanguage">
                    @(Culture.IsArabic ? "EN" : "AR")
                </button>

                <a href="/" class="btn btn-sm px-3 logout-btn">
                    <i class="bi bi-box-arrow-right me-1"></i> @L["logout"]
                </a>
            </div>
        </div>
    </div>
</nav>

@code {
    [Parameter] public bool IsDarkMode { get; set; }
    [Parameter] public EventCallback<bool> OnThemeChanged { get; set; }

    protected override void OnInitialized() => Culture.OnChange += HandleCultureChanged;

    private void HandleCultureChanged() => InvokeAsync(StateHasChanged);

    private Task ToggleTheme() => OnThemeChanged.InvokeAsync(!IsDarkMode);

    private void ToggleLanguage()
    {
        Culture.Toggle();
        // StateHasChanged is triggered by HandleCultureChanged
    }

    public void Dispose() => Culture.OnChange -= HandleCultureChanged;
}
