@inherits LayoutComponentBase
@inject CultureService Culture
@implements IDisposable

<div class="min-vh-100 d-flex flex-column"
     data-bs-theme="@(isDarkMode ? "dark" : "light")"
     dir="@(Culture.IsArabic ? "rtl" : "ltr")">
    <SharedTopBar IsDarkMode="@isDarkMode" OnThemeChanged="HandleThemeChange" />
    <main class="flex-grow-1 overflow-auto">
        <div class="container-fluid py-4">
            @Body
        </div>
    </main>
</div>

@code {
    private bool isDarkMode;

    protected override void OnInitialized()
    {
        // Subscribe to culture changes
        Culture.OnChange += HandleCultureChanged;
    }

    private void HandleCultureChanged()
    {
        // Force re-render when culture changes
        InvokeAsync(StateHasChanged);
    }

    private void HandleThemeChange(bool value)
    {
        isDarkMode = value;
        StateHasChanged();
    }

    public void Dispose()
    {
        // Unsubscribe from culture changes
        Culture.OnChange -= HandleCultureChanged;
    }
}